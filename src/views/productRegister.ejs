<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<%- include('./partials/head.ejs', {style:"login", title:"Login"}) %>
    <%- include('./partials/head.ejs', {style:"register", title:"Register"}) %>

        <body>
            <%- include('./partials/header.ejs') %>
                <main>
                    <div class="div-form">
                        <form action="/product/add" method="post" enctype="multipart/form-data">
                            <p class="form">
                                <label for="product-name" class="label-form">Nombre del Producto</label>
                                <input type="text" name="name" class="input-form"
                                    value="<%= locals.oldInfo&&locals.oldInfo.name?oldInfo.name:''%>">
                                <% if (locals.errors && locals.errors.name ) { %>
                                    <p>
                                        <%= errors.name.msg %>
                                    </p>
                                    <% } %>
                            </p>
                            <p class="form">
                                <label for="product-description" class="label-form">Descripcion</label>
                                <input type="textarea" name="description" class="input-form" value="<%= locals.oldInfo&&locals.oldInfo.description?oldInfo.description:''
                                                %>">
                                <% if (locals.errors && locals.errors.description ) { %>
                                    <p>
                                        <%= errors.description.msg %>
                                    </p>
                                    <% } %>
                            </p>
                            <p class="form">
                                <label for="product-price" class="label-form">Precio</label>
                                <input type="number" name="price" class="input-form" value="<%= locals.oldInfo&&locals.oldInfo.price?oldInfo.price:''
                                                %>">
                                <% if (locals.errors && locals.errors.price ) { %>
                                    <p>
                                        <%= errors.price.msg %>
                                    </p>
                                    <% } %>
                            </p>
                            <p class="form">
                                <label for="product-discount" class="label-form">Descuento</label>
                                <input type="number" name="discount" class="input-form" value="<%= locals.oldInfo&&locals.oldInfo.discount?oldInfo.discount:''
                                                %>">
                                <% if (locals.errors && locals.errors.discount ) { %>
                                    <p>
                                        <%= errors.discount.msg %>
                                    </p>
                                    <% } %>
                            </p>
                            <p class="form">
                                <label for="product-img" class="label-form">Subi tu imagen</label>
                                <input type="file" name="img" class="input-form">
                                <% if (locals.errors && locals.errors.img ) { %>
                                    <p>
                                        <%= errors.img.msg %>
                                    </p>
                                    <% } %>
                            </p>

                            <p id="form-buttons">
                                <button type="submit">Crear Publicacion</button>
                                <button type="reset"><a href="/">Cancelar</a></button>
                            </p>
                        </form>
                    </div>
                </main>

                <%- include('./partials/footer.ejs') %>
        </body>

</html>